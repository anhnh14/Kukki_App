<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SINH TỐ CHANH DƯA HẤU"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/tv_newfeed_title"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minh Tri Do"
                android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#f07547"
                android:id="@+id/tv_newfeed_artist"
                android:layout_below="@+id/tv_newfeed_title"
                android:layout_alignLeft="@+id/tv_newfeed_title"
                android:layout_alignStart="@+id/tv_newfeed_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 phút"
                android:textSize="12sp"
                android:id="@+id/tv_newfeed_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                 />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_marginRight="5dp"
                android:background="@drawable/clock"
                android:layout_alignTop="@+id/tv_newfeed_time"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_newfeed_time"
                android:layout_toStartOf="@+id/tv_newfeed_time" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.linhminhoo.kukki.Model.ImageNetwork.FeedImageView
            android:id="@+id/feedImage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:background="#ffffff"
            android:visibility="visible"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/newfeed_img_like"
                android:background="@drawable/home_like"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="280"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_newfeed_total_like"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/newfeed_img_like"
                android:layout_toEndOf="@+id/newfeed_img_like" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23dp"
                android:background="@drawable/home_comment"
                android:layout_toRightOf="@+id/tv_newfeed_total_like"
                android:layout_toEndOf="@+id/tv_newfeed_total_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1850"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_newfeed_total_comment"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView5"
                android:layout_toEndOf="@+id/imageView5" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_newfeed_total_comment"
                android:layout_toEndOf="@+id/tv_newfeed_total_comment" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:layout_marginLeft="23dp"
                android:background="@drawable/home_view"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2541"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:id="@+id/tv_newfeed_total_view"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView7"
                android:layout_toEndOf="@+id/imageView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="145 kcal"
                android:textSize="12sp"
                android:id="@+id/tv_newfeed_kcal"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView8"
                android:layout_marginRight="8dp"
                android:background="@drawable/home_kcal"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_newfeed_kcal"
                android:layout_toStartOf="@+id/tv_newfeed_kcal" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:background="#bdc3c7"
        android:layout_height="7dp"></LinearLayout>
</LinearLayout>